<main>
    <%- include('../partials/adminSidebar') %>

    <div id="main-wrapper" class="container-fluid">

        <div class="row bg-white shadow-sm p-3">
            <div class="col-md-auto">
                <span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
            </div>
            <div class="col-md">
                <h5 class="m-0 color-theme d-inline-block">Assign Agent</h5>
            </div>
        </div>

        <div class="row m-4">
            <div class="col-md-8 mx-auto">
                <form action="/admin/donation/assign/<%= donation._id %>" method="POST" class="card border shadow-sm rounded p-4">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Donation Information</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="donor" class="form-label">Donor Name</label>
                                <input type="text" class="form-control" id="donor" value="<%= donation.donor.firstName + ' ' + donation.donor.lastName %>" disabled>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="address" class="form-label">Address</label>
                                <input type="text" class="form-control" id="address" value="<%= donation.address %>" disabled>
                            </div>
                        </div>

                        <h5 class="card-title mt-4 mb-3">Assign Agent</h5>
                        <div class="mb-3">
                            <label for="agent" class="form-label">Select Agent</label>
                            <select name="agent" class="form-select" id="agent" required>
                                <option value="" disabled selected>Select Agent</option>
                                <% for(let i=0; i<agents.length; i++) { %>
                                    <option value="<%= agents[i]._id %>"><%= agents[i].firstName + " " + agents[i].lastName %></option>
                                <% } %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="msg" class="form-label">Message to Agent (Optional)</label>
                            <textarea type="text" name="adminToAgentMsg" class="form-control" id="msg" placeholder="You can write here some message.."></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Assign Agent</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</main>